extends layout

block content
    h1.text-danger #{title}
    form(method='POST', action='/articles/add')
      #form-group
        label Title:
        input.form-control(name='title', type='text')
      #form-group
        label Body:
        textarea.form-control(name="body")
      br
      input.btn.btn-danger(type="submit", value='submit')